<%- include("partials/header.ejs") %>

<!-- content starting -->
<header>
  <nav>
    <div class="nav-container">
      <ul class="nav-list">
        <li><a href="/">Home</a></li>
        <li><a href="/post">Post</a></li>
      </ul>
    </div>
  </nav>

  <div class="carousel-container">
    <div
      id="carouselExampleCaptions"
      class="carousel slide"
      data-bs-ride="carousel"
    >
      <div class="carousel-indicators">
        <button
          type="button"
          data-bs-target="#carouselExampleCaptions"
          data-bs-slide-to="0"
          class="active"
          aria-current="true"
          aria-label="Slide 1"
        ></button>
        <button
          type="button"
          data-bs-target="#carouselExampleCaptions"
          data-bs-slide-to="1"
          aria-label="Slide 2"
        ></button>
        <button
          type="button"
          data-bs-target="#carouselExampleCaptions"
          data-bs-slide-to="2"
          aria-label="Slide 3"
        ></button>
      </div>
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img
            src="/styles/images/header1.jpg"
            class="d-block mx-auto"
            alt="..."
          />
        </div>
        <div class="carousel-item">
          <img
            src="/styles/images/header2.jpg"
            class="d-block mx-auto"
            alt="..."
          />
        </div>
        <div class="carousel-item">
          <img
            src="/styles/images/header3.jpg"
            class="d-block mx-auto"
            alt="..."
          />
        </div>
      </div>
      <button
        class="carousel-control-prev"
        type="button"
        data-bs-target="#carouselExampleCaptions"
        data-bs-slide="prev"
      >
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button
        class="carousel-control-next"
        type="button"
        data-bs-target="#carouselExampleCaptions"
        data-bs-slide="next"
      >
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>
  </div>
</header>
<main class="main-wrapper">
  <div class="body-container">
    <div class="article-header">
      <p>review and read the latest arif's stuff</p>
      <h1>Latest from Our stuff</h1>
    </div>

    <!--Starting cards layout-->
    <article class="card-layout">
      <% posts.forEach(post => { %>
        <div class="card" style="width: 250px">
          <form action="/delete/<%= post.id %>" method="POST">
            <button class="btn-closed" type="submit">X</button>
        <% if (post.image) { %>
        </form>

        <img
          src="/uploads/<%= post.image %>"
          class="card-img-top rounded-0"
          alt="..."
        />
        <% } %>

        <div class="card-body">
          <h5 class="card-title"><%= post.title %></h5>
          <p class="card-text"><%= post.description %></p>

          <div class="card-review">
            <a href="/edit/<%= post.id %>" class="btn btn-warning">Edit</a>
          </div>
        </div>
      </div>
      <% }) %>
    </article>
  </div>

  <%- include("partials/footer.ejs") %>
</main>
